{
  "description": "Safety hooks for development workflows",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/prevent-main-commit.sh"
          }
        ]
      }
    ]
  }
}
